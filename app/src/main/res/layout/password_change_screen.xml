<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCE6F2">

    <!-- 戻るボタン -->
    <ImageButton
        android:id="@+id/button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- タイトル -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="パスワード変更"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ==== 中央コンテンツ ==== -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="20dp">

            <!-- 現在のパスワード -->
            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="現在のパスワード"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textPassword"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"/>

            <!-- ★追加：現在のパスワード エラー -->
            <TextView
                android:id="@+id/error_current_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="※パスワードが間違っています"
                android:textColor="#FF4444"
                android:textSize="14sp"
                android:paddingTop="4dp"
                android:visibility="gone"/>

            <!-- 新しいパスワード -->
            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="新しいパスワード (8文字以上)"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textPassword"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"/>

            <!-- ★追加：新パスワード エラー -->
            <TextView
                android:id="@+id/error_new_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="※パスワードを入力してください"
                android:textColor="#FF4444"
                android:textSize="14sp"
                android:paddingTop="4dp"
                android:visibility="gone"/>

            <!-- 新しいパスワード（確認） -->
            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="確認用パスワード (8文字以上)"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textPassword"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"/>

            <!-- ★追加：確認パスワード エラー -->
            <TextView
                android:id="@+id/error_confirm_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="※パスワードが一致しません"
                android:textColor="#FF4444"
                android:textSize="14sp"
                android:paddingTop="4dp"
                android:visibility="gone"/>

            <!-- 変更ボタン -->
            <Button
                android:id="@+id/button2"
                android:layout_width="200dp"
                android:layout_height="52dp"
                android:layout_marginTop="32dp"
                android:backgroundTint="#E24A4A"
                android:text="変更"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_gravity="center"/>

        </LinearLayout>
    </ScrollView>

    <!-- 下部ナビ -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#E0E0E0"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="7dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/home_button" />

        <ImageButton
            android:id="@+id/passing_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="7dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/passing_button" />

        <ImageButton
            android:id="@+id/history_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="7dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/history_button" />

        <ImageButton
            android:id="@+id/emotion_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="7dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/emotion_button" />

        <ImageButton
            android:id="@+id/gear_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="7dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/gear_button" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
